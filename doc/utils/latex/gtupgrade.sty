% Set section number (for report class, no chapters, begin with section).
\def\thesection{\arabic{section}}

% Define colors.
\definecolor{text-color}           {rgb} {.1,.1,.1}
\definecolor{section-color}        {rgb} {.20,.20,.20}
\definecolor{url-color}            {rgb} {.1,0.1,.75}
\definecolor{lst-background-color} {rgb} {.97,.97,.97}
\definecolor{lst-comment-color}    {rgb} {.4,.4,.4}
\definecolor{lst-keyword-color}    {rgb} {0,0,.5}
\definecolor{lst-string-color}     {rgb} {.25,.1,.1}
\definecolor{lst-rulecolor-color}  {rgb} {.9,.9,.9}

% Section format.
\titleformat{\part}{\Huge\bfseries\color{section-color}}{\thepart}{1em}{}
\titleformat{\chapter}{\Huge\bfseries\color{section-color}}{\thechapter}{1em}{}
\titleformat{\section}{\LARGE\bfseries\color{section-color}}{\thesection}{1em}{}
\titleformat{\subsection}{\Large\bfseries\color{section-color}}{\thesubsection}{1em}{}
\titleformat{\subsubsection}{\large\bfseries\color{section-color}}{\thesubsubsection}{1em}{}

% Space between paragraphs, no indent.
